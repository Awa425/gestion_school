{% extends 'base.html.twig' %}
{% block body %}
     {{ form_start(formEtu) }}
        <div class='row'>
            <div class="container col-6">
                <fieldset>
                    <div class="form-group">
                        <label for="nomComplet" class="form-label mt-4">Nom Complet</label>
                         {{  form_widget(formEtu.nomComplet, { 'attr': { 'class': 'form-control'} } )}}
                        <small id="namelHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label mt-4">Login</label>
                         {{  form_widget(formEtu.email, { 'attr': { 'class': 'form-control'} } )}}
                        <small id="emailHelp" class="form-text text-muted"></small>
                    </div>
                        <div class="form-group">
                        <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
                        {{  form_widget(formEtu.password, { 'attr': { 'class': 'form-control'} } )}}
                    </div>
                    <div class="form-group">
                        <label for="nomComplet" class="form-label mt-4">Adresse</label>
                        {{  form_widget(formEtu.adresse, { 'attr': { 'class': 'form-control'} } )}}
                        <small id="namelHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="nomComplet" class="form-label mt-4">Sexe</label>
                        {{  form_widget(formEtu.sexe, { 'attr': { 'class': 'form-control'} } )}}
                        <small id="namelHelp" class="form-text text-muted"></small>
                    </div>
                    <div class="form-group">
                        <label for="nomComplet" class="form-label mt-4">Matricule</label>
                        {{  form_widget(formEtu.matricule, { 'attr': { 'class': 'form-control'} } )}}
                        <small id="namelHelp" class="form-text text-muted"></small>
                    </div>

                </fieldset>
            </div>
            <div class='container col-6'>
                <div class="row">
                <select class="form-select" name="anneescolaire_id" id="exampleSelect1">
                    <option disabled selected>--Veuillez choisir annee--</option>
                    {% for an in anSc %}
                    <option value="{{an.id}}">{{an.libelle}}</option>

                    {% endfor %}
                </select>
                <select class="form-select" name="ac" id="exampleSelect1">
                    <option disabled selected>--Veuillez choisir ac--</option>
                    {% for ac in acs %}
                    <option value="{{ac.id}}">{{ac.nomComplet}}</option>

                    {% endfor %}
                </select>
                <select class="form-select" name="clases" id="exampleSelect1">
                    <option disabled selected>--Veuillez choisir classe--</option>
                    {% for classe in classes %}
                    <option value="{{classe.id}}">{{classe.libelle}}</option>

                    {% endfor %}
                </select>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-primary">Submit</input>
    {{ form_end(formEtu) }}


{% endblock %}