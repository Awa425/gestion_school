{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{ title }}!
		</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom Complet</th>
					<th scope="col">Grade</th>
				</tr>
			</thead>
			<tbody>
				{% for p in profs %}
					<tr>
						<td>{{ p.nomComplet}}</td>
						<td>{{ p.grade}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div>
		{{ knp_pagination_render(profs) }}
	</div>

{% endblock %}
