{% extends 'base.html.twig' %}

{% block title %}Hello ProfesseurController!
{% endblock %}

{% block body %}
	<style></style>

	<div class="example-wrapper">
		<h1>{{ title }}!
		</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom Complet</th>
					<th scope="col">Grade</th>
					<th scope="col">Options</th>
				</tr>
			</thead>
			<tbody>
				{% for p in profs %}
					<tr>
						<td>{{ p.nomComplet}}</td>
						<td>{{ p.grade}}</td>
						<td class="text-center">
							<a href="">Archiver</a>
							<a href={{ path("professeur_edit", {'id': p.id} )}}>Modifier</a>
							<a href="">Detail</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div>
		{{ knp_pagination_render(profs) }}
	</div>

{% endblock %}
