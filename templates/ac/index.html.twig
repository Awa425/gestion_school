{% extends 'base.html.twig' %}

{% block title %}Hello AcController!
{% endblock %}

{% block body %}
	<style></style>

	<div class="example-wrapper">
		<table class="table table-hover">
			<thead>
				<tr class="text-center">
					<th scope="col">Nom Complet</th>
					<th scope="col">Login</th>
					<th scope="col">Options</th>
				</tr>
			</thead>
			<tbody>
				{% for a in ac %}
					<tr class="text-center">
						<td>{{ a.nomComplet}}</td>
						<td>{{ a.email}}</td>
						<td class="text-center">
							<a href="">Archiver</a>
							<a href={{ path("ac_edit", {'id': a.id} )}}>Modifier</a>
							<a href="">Detail</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div>
		{{ knp_pagination_render(ac) }}
	</div>
{% endblock %}
