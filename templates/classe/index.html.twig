{% extends 'base.html.twig' %}

{% block title %}Hello ClasseController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<table class="table table-hover">
			<thead>
				<tr class="text-center">
					<th scope="col">Num</th>
					<th scope="col">Niveau</th>
					<th scope="col">Filliere</th>
					<th scope="col">Libelle</th>
					<th scope="col">Option</th>
				</tr>
			</thead>
			<tbody>
				{% set i=0 %}
				{% for classe in classes %}
					<tr>
						<td>{% set i = i+1 %}
							{{i}}</td>
						<td>{{ classe.niveau}}</td>
						<td>{{ classe.filliere}}</td>
						<td>{{ classe.libelle}}</td>
						<td class="text-center">
							<a href="" >Archiver</a>
							<a href="" >Modifier</a>
							<a href="">Detail</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div>
		{{ knp_pagination_render(classes) }}
	</div>
{% endblock %}
