{% extends 'base.html.twig' %}

{% block title %}Hello RpController!
{% endblock %}

{% block body %}
	<style></style>
	<div class='container col-12 text-center bg-secondary mt-2'>La liste des RP</div>
	<div class="example-wrapper">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom Complet</th>
					<th scope="col">Login</th>
				</tr>
			</thead>
			<tbody>
				{% for r in rp %}
					<tr>
						<td>{{ r.nomComplet}}</td>
						<td>{{ r.email}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div>
		{{ knp_pagination_render(rp) }}
	</div>
{% endblock %}
