{% extends 'base.html.twig' %}

{% block title %}Hello RpController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class='container col-12 text-center bg-secondary mt-2'>La liste des RP</div>
	<div class="example-wrapper">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom Complet</th>
					<th scope="col">Login</th>
					<th scope="col">Password</th>

				</tr>
			</thead>
			<tbody>
				{% for r in rp %}
					<tr>
						<td>{{ r.nomComplet}}</td>
						<td>{{ r.email}}</td>
						<td>{{ r.Password}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div>
		{{ knp_pagination_render(rp) }}
	</div>
{% endblock %}
